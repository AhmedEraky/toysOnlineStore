    <!--Hadeer Servlet-->

    <servlet>
        <servlet-name>UpdateProfile</servlet-name>
        <servlet-class>com.iti.controller.servlet.UpdateProfile</servlet-class>
    </servlet>

    <!--Eraky Servlet Mapping-->

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
