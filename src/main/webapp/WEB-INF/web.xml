        <jsp-file>/html/user/shop/shop.jspx</jsp-file>
    </servlet>



    <!--Aya Servlet-->

    <servlet>
        <servlet-name>productPage</servlet-name>
        <jsp-file>/html/user/product/productPage.jspx</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>com.iti.controller.servlet.ReviewServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProductHandling</servlet-name>
        <servlet-class>com.iti.controller.servlet.ProductHandling</servlet-class>
    </servlet>
