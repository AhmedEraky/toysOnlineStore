<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns:c="http://java.sun.com/jsp/jstl/core"
          xmlns="http://www.w3.org/1999/xhtml" version="2.0">
    <jsp:directive.page contentType="text/html;" isELIgnored="false"/>
    <html>
    <head>
        <jsp:directive.include file="head.html"></jsp:directive.include>
    </head>
    <body>
    <div class="container">

        <h1 class="text-center">Search Form</h1>
        <p class="text-center">Please Enter What You Want to search For</p>
        <form class="centered" action="listOfUsers.jspx">
            <label>Name:</label>
            <input required="" name="name" placeholder="name"/>
            <input type="submit" value="search"/>
        </form>

        <jsp:include page="retriveUser"/>

        <table class="table" style="margin-top: 3%">
            <tr>
                <th>FirstName</th>
                <th>Email</th>
                <th>Jop</th>
            </tr>

            <c:forEach var="user" items="${users}">
                <tr>
                    <td>${user.name}</td>
                    <td>${user.email}</td>
                    <td>${user.job}</td>
                </tr>
            </c:forEach>
        </table>
    </div>

    </body>
    </html>
</jsp:root>
